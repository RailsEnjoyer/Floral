<script defer>
  document.addEventListener("DOMContentLoaded", function() {
    var elements = document.querySelectorAll('.hidden');

    function checkScroll() {
      elements.forEach(function(element) {
        var position = element.getBoundingClientRect();

        // Добавление классов при прокрутке вниз
        if (position.top < window.innerHeight * 0.75) {
          element.classList.add('animated');
        }

        if (position.top < window.innerHeight * 0.75 && !element.classList.contains('animated-right')) {
          element.classList.add('animated-right');
        }

        // Добавление классов при прокрутке вверх
        if (position.bottom > window.innerHeight * 0.1) {
          element.classList.remove('animated');
          element.classList.remove('animated-right');
        }
      });
    }

    window.addEventListener('scroll', checkScroll);
    checkScroll();
  });
</script>